{
	"name": "welpie21/surrealdb.php",
	"description": "SurrealDB PHP Driver",
	"type": "library",
	"homepage": "https://github.com/welpie21/surrealdb.php",
	"license": "MIT",
	"readme": "README.md",
	"version": "1.0.0",
	"autoload": {
		"psr-4": {
			"Surreal\\": "src/"
		}
	},
	"scripts": {
		"phpstan": "vendor/bin/phpstan -c phpstan.neon",
		"test-coverage": "./vendor/bin/phpunit -c phpunit.xml",
		"run-surreal-1.3.1": "docker run --rm --pull always -p 8000:8000 surrealdb/surrealdb:v1.3.1 start --auth --user root --pass root --allow-all --log trace ",
		"run-surreal-1.4.0": "docker run --rm --pull always -p 8000:8000 surrealdb/surrealdb:latest start --auth --user root --pass root --allow-all --log trace "
	},
	"authors": [
		{
			"name": "Beau",
			"email": "beaudenheijer@gmail.com"
		}
	],
	"require": {
		"ext-curl": "*",
		"ramsey/uuid": "4.7.5",
		"phrity/websocket": "2.1.3",
		"php": ">=8.3",
		"welpie21/cbor.php": "1.0.1"
	},
	"require-dev": {
		"phpunit/phpunit": "10.5.10",
		"phpstan/phpstan": "^1.10",
		"phpstan/phpstan-beberlei-assert": "^1.1",
		"phpstan/extension-installer": "^1.3",
		"nikic/php-parser": "^v4.16.0",
		"vimeo/psalm": "^5.22.2",
		"phpunit/php-code-coverage": "^10.1"
	},
	"config": {
		"allow-plugins": {
			"phpstan/extension-installer": true
		}
	},
	"extra": {
		"phpstan": {
			"includes": [
				"extension.neon"
			]
		},
		"phpstan/extension-installer": {
			"ignore": [
				"phpstan/phpstan-phpunit"
			]
		}
	}
}
